<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/statusbar_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/title_bar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/icon_slidingmenu_left"
            android:background="@mipmap/icon_slidingmenu_left"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/title_name"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/icon_slidingmenu_right"
            android:background="@mipmap/icon_slidingmenu_right"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>